load("@rules_cc//cc:defs.bzl", "cc_library")

package(default_visibility = ["//visibility:public"])

# Define config settings for platforms to make selects cleaner
config_setting(
    name = "windows",
    constraint_values = ["@platforms//os:windows"],
)

config_setting(
    name = "macos",
    constraint_values = ["@platforms//os:macos"],
)

config_setting(
    name = "linux",
    constraint_values = ["@platforms//os:linux"],
)

cc_library(
    name = "glfw",
    srcs = [
        # Common files
        "src/context.c",
        "src/init.c",
        "src/input.c",
        "src/monitor.c",
        "src/vulkan.c",
        "src/window.c",
        "src/osmesa_context.c",
        "src/egl_context.c",
        "src/null_init.c",
        "src/null_monitor.c",
        "src/null_window.c",
        "src/null_joystick.c",
        "src/null_joystick.h",
        "src/platform.c", 
        "src/mappings.h",
        # Common internal headers
        "src/internal.h",
        "src/platform.h",
        "src/null_platform.h",
    ] + select({
        ":windows": [
            "src/win32_init.c",
            "src/win32_joystick.c",
            "src/win32_monitor.c",
            "src/win32_time.c",
            "src/win32_time.h",
            "src/win32_thread.c",
            "src/win32_thread.h",
            "src/win32_window.c",
            "src/wgl_context.c",
            "src/win32_module.c",
            "src/win32_platform.h",
            "src/win32_joystick.h",
        ],
        ":macos": [
            "src/cocoa_init.m",
            "src/cocoa_joystick.m",
            "src/cocoa_monitor.m",
            "src/cocoa_window.m",
            "src/cocoa_time.c",
            "src/nsgl_context.m",
            "src/posix_thread.c",
            "src/posix_module.c",
            "src/cocoa_platform.h",
            "src/cocoa_joystick.h",
            "src/posix_thread.h",
        ],
        ":linux": [
            # X11 files
            "src/x11_init.c",
            "src/x11_monitor.c",
            "src/x11_window.c",
            "src/xkb_unicode.c",
            "src/glx_context.c",
            "src/x11_platform.h",
            
            # Wayland files (Optional: remove if you only want X11)
            "src/wl_init.c",
            "src/wl_monitor.c",
            "src/wl_window.c",
            "src/wl_platform.h",
            
            # Common Linux files
            "src/linux_joystick.c",
            "src/posix_time.c",
            "src/posix_thread.c",
            "src/posix_module.c",
            "src/posix_poll.c",
            "src/posix_time.h",
            "src/posix_thread.h",
            "src/linux_joystick.h",
        ],
        "//conditions:default": [],
    }),
    hdrs = [
        "include/GLFW/glfw3.h",
        "include/GLFW/glfw3native.h",
    ],
    defines = select({
        ":windows": ["GLFW_BUILD_WIN32", "_GLFW_WIN32"],
        ":macos": ["GLFW_BUILD_COCOA", "_GLFW_COCOA"],
        ":linux": [
            "_GLFW_X11",
            "_GLFW_WAYLAND", # Remove if you don't want Wayland support
        ],
        "//conditions:default": [],
    }),
    linkopts = select({
        ":windows": [
            # Windows libs needed.
            "gdi32.lib",
            "user32.lib",
            "shell32.lib",
        ],
        ":macos": [
            "-framework Cocoa",
            "-framework IOKit",
            "-framework CoreFoundation",
            "-framework QuartzCore",
        ],
        ":linux": [
            "-lX11",
            "-lpthread",
            "-ldl",
            # Add -lwayland-client etc if using Wayland
        ],
        "//conditions:default": [],
    }),
    strip_include_prefix = "include",
    visibility = ["//visibility:public"],
    alwayslink = True,
)
